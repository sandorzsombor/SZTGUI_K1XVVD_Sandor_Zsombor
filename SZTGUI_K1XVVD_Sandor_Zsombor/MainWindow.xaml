<Window x:Class="SZTGUI_K1XVVD_Sandor_Zsombor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SZTGUI_K1XVVD_Sandor_Zsombor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">     
    
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/Image/ftbFld2.jpg" Stretch="Fill"/>
            </Grid.Background>

            <Button Grid.Row="0" Content="Team building" FontSize="35" Height="50" Width="300" VerticalAlignment="Bottom" Click="Bt_tmBuilding"/>
            <Button Grid.Row="1" Content="Exit" FontSize="25" Height="50" Width="300" VerticalAlignment="Top" Click="Bt_exit"/>
        </Grid>
    </Grid>
</Window>
